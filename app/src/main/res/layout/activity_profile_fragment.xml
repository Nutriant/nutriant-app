<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.fragments.dashboard.ProfileFragment"
    android:background="@color/white">

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18sp"
        android:text="@string/profile_layout"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar_dummy"
            app:civ_border_width="0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/account_name"
            android:fontFamily="@font/poppinsbold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_profile_information"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvHeightProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/centi_meter"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/greenApps"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height_normal"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_profile_information"
            android:padding="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvWeightProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kilo_gram"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/greenApps"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_normal"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_profile_information"
            android:padding="16dp"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvAgeProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years_old"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/greenApps"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsregular"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutPersonalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_profile"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:text="@string/personal_data"
            android:layout_toEndOf="@id/icon_profile"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:text="@string/settings"
            android:layout_toEndOf="@id/icon_settings"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutAboutApps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_aboutApps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info_square"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:text="@string/about_apps"
            android:layout_toEndOf="@id/icon_aboutApps"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layoutSignOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_signOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:textSize="16sp"
            android:text="@string/sign_out"
            android:layout_toEndOf="@id/icon_signOut"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


</LinearLayout>