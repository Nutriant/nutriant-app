<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNutritionArticles"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/bmidummyimages" />

        <TextView
            android:id="@+id/tvArticleTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivNutritionArticles"
            android:layout_alignTop="@id/ivNutritionArticles"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppinsbold"
            android:text="@string/articlesTitle"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivNutritionArticles"
            android:layout_below="@id/tvArticleTitles"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/articlesDescription"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivNutritionArticles"
            android:layout_below="@id/tvDescription"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppinsregular"
            android:text="@string/articlesReleaseDate"
            android:textSize="12sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>