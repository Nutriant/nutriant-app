<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape>
            <solid android:color="#61B3B3B3"/> <!-- Shadow color -->
            <corners android:radius="10dp"/>

            <!-- Shadow position -->
            <padding
                android:top="1dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="1dp" />
        </shape>
    </item>

    <!-- Content Layer -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>